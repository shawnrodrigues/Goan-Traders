---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
  canonical?: string;
}

const { title, description, keywords, canonical } = Astro.props;
const defaultKeywords = "cement supplier goa, building materials goa, jk cement dealer, jsw cement, ultratech cement, ramco cement, sand supplier goa, construction materials goa";
const finalKeywords = keywords ? `${keywords}, ${defaultKeywords}` : defaultKeywords;

import { SpeedInsights } from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={finalKeywords} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Favicon and App Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.ico">
    <link rel="icon" type="image/x-icon" sizes="32x32" href="/favicon.ico">
    <link rel="icon" type="image/x-icon" sizes="16x16" href="/favicon.ico">
    <meta name="theme-color" content="#2563EB">
    
    <!-- Sitemap and Robots -->
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Goan Traders" />
    <meta property="og:image" content="/favicon.ico" />
    <meta property="og:image:alt" content="Goan Traders - Cement and Building Materials Supplier" />
    <meta property="og:locale" content="en_IN" />
    <meta property="og:url" content="https://goantraders.com" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/favicon.ico" />
    <meta name="twitter:image:alt" content="Goan Traders - Cement and Building Materials Supplier" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <meta name="author" content="Goan Traders" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Goan Traders",
        "description": "Your trusted cement and building material supplier in Goa",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Goa",
          "addressCountry": "IN"
        },
        "telephone": "+91-9765664489",
        "openingHours": "Mo-Sa 08:00-18:00",
        "priceRange": "$$",
        "url": "https://goantraders.com",
        "image": "/favicon.ico",
        "areaServed": "Goa, India",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.9",
          "reviewCount": "150"
        },
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Building Materials",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Product",
                "name": "JK Cement"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Product",
                "name": "JSW Cement"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Product",
                "name": "Ultratech Cement"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Product",
                "name": "Ramco Cement"
              }
            }
          ]
        }
      }
    </script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Performance optimizations -->
    <link rel="dns-prefetch" href="//images.pexels.com">
    <link rel="dns-prefetch" href="//wa.me">
    <link rel="dns-prefetch" href="//maps.google.com">
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//fonts.gstatic.com">
    
    <!-- Preload critical resources -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style">
  </head>
  <body>
    <!-- Loading Spinner -->
    <div class="loading-spinner" id="loading-spinner">
      <div class="spinner">
        <div class="spinner-ring"></div>
        <div class="spinner-ring"></div>
        <div class="spinner-ring"></div>
      </div>
      <p>Loading Goan Traders...</p>
    </div>
    
    <slot />
    
    <!-- WhatsApp Chat Widget -->
    <div id="whatsapp-widget">
      <a href="https://wa.me/919765664489" target="_blank" rel="noopener noreferrer" aria-label="Chat on WhatsApp">
