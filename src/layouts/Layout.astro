---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
  canonical?: string;
}

const { title, description, keywords, canonical } = Astro.props;
const defaultKeywords = "cement supplier goa, building materials goa, jk cement dealer, jsw cement, ultratech cement, ramco cement, sand supplier goa, construction materials goa";
const finalKeywords = keywords ? `${keywords}, ${defaultKeywords}` : defaultKeywords;

import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
